#!/usr/bin/make -f

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_clean:
	rm -rf build/
	rm -rf *.egg-info/
	find . -name "*.pyc" -delete
	find . -name "__pycache__" -delete

override_dh_auto_install:
	dh_auto_install
	
	# Install CSS files to shared location
	mkdir -p debian/shift/usr/share/shift/styles
	install -m 644 *.css debian/shift/usr/share/shift/styles/ || true
