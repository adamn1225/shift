#!/usr/bin/env python3
"""
Shift - Universal Document Converter
Main entry point for the system package
"""

import sys
import os
from pathlib import Path

# Add the styles directory to the search path for CSS files
STYLES_DIR = "/usr/share/shift/styles"
if os.path.exists(STYLES_DIR):
    os.environ["SHIFT_STYLES_PATH"] = STYLES_DIR

# Import and run the main converter
try:
    from doc_converter import main
    if __name__ == "__main__":
        main()
except ImportError:
    # Fallback - try to find the module in the current directory
    script_dir = Path(__file__).parent
    sys.path.insert(0, str(script_dir))
    from doc_converter import main
    main()
